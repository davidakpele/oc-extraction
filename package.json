{
  "name": "ocr-extraction-engine",
  "version": "1.0.0",
  "description": "Local OCR + PDF data extraction engine for bank and tax statements",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
