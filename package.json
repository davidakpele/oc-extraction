  "dependencies": {
    "express": "^5.2.0",
    "multer": "^2.0.1",
    "mysql2": "^3.6.5",
    "bull": "^4.12.2",
    "ioredis": "^5.3.2",
    "pdf-parse": "^2.4.4",
    "pdf2pic": "^3.1.1",
    "sharp": "^0.34.4",
    "node-tesseract-ocr": "^2.2.1",
    "uuid": "^13.0.0",
    "crypto": "^1.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "dotenv": "^17.3.0",
    "joi": "^18.0.1",
    "ajv": "^8.12.0",
    "date-fns": "^4.0.0",
    "axios": "^1.6.5",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "nodemon": "^3.0.3",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": ["src/**/*.js"]
