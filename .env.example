# Server
PORT=3001
NODE_ENV=production

# MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ocr_engine
DB_USER=banking_user
DB_PASSWORD=banking_pass
DB_CONNECTION_LIMIT=10

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# File Storage
UPLOAD_DIR=/app/storage/uploads
ARTIFACTS_DIR=/app/storage/artifacts
MAX_FILE_SIZE=52428800

# OCR Settings
TESSERACT_LANG=eng
TESSERACT_OEM=3
TESSERACT_PSM=6
TESSERACT_PATH=

# PDF Rendering
PDF_RENDER_DPI=300

# Processing
MAX_WORKERS=2
JOB_TIMEOUT=300000
JOB_RETENTION=604800000

# Retention
PDF_RETENTION_DAYS=90
ARTIFACT_RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# Debug
DEBUG_ARTIFACTS=true

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5500,null
API_KEY=